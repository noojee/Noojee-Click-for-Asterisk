{
	"name": "Noojee Click for Asterisk",
	"version": "2.0",
	"manifest_version": 2,
	"description": "Turns phone numbers in any web page into 'click to dial' links. With Noojee Click and Asterisk you can dial any phone number on a web page with a single click.",
	"background": {
		"page": "background.html"
	},
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"icons": {
		"128": "img/phone-128.png"
	},
	
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"js/foreground/util.js",
				"js/foreground/phonepatterns.js",
				"js/foreground/dialstatus.js",
				"js/foreground/noojeeclick.js",
				"js/foreground/optionAccessor.js",
				"js/foreground/contentscript.js",
				"js/foreground/notification.js",
				"js/foreground/prompts.js",
				"js/foreground/render.js",
				"js/foreground/handlers.js",
				"js/foreground/messagepassing.js"
			]
		}
	],
	"permissions": [
		"http://*/",
		"contextMenus",
		"notifications"
	]
}

